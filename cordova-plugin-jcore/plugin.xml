<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
     xmlns:android="http://schemas.android.com/apk/res/android"
     id="cordova-plugin-jcore"
     version="1.2.3">

    <name>JCore</name>
    <description>Cordova plugin for jcore</description>
    <author>WilhanTian, JiGuang</author>
    <keywords>jcore,jpush</keywords>
    <license>MIT License</license>

    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>

    <platform name="android">
        <resource-file src="src/android/arm64-v8a/libjcore123.so" target="libs/arm64-v8a/libjcore123.so"/>
        <resource-file src="src/android/armeabi/libjcore123.so" target="libs/armeabi/libjcore123.so"/>
        <resource-file src="src/android/armeabi-v7a/libjcore123.so" target="libs/armeabi-v7a/libjcore123.so"/>
        <resource-file src="src/android/mips/libjcore123.so" target="libs/mips/libjcore123.so"/>
        <resource-file src="src/android/mips64/libjcore123.so" target="libs/mips64/libjcore123.so"/>
        <resource-file src="src/android/x86/libjcore123.so" target="libs/x86/libjcore123.so"/>
        <resource-file src="src/android/x86_64/libjcore123.so" target="libs/x86_64/libjcore123.so"/>

        <lib-file src="src/android/jcore-android-1.2.3.jar" />
    </platform>

    <platform name="ios">
        <source-file src="src/ios/jcore-ios-1.2.1.a" framework="true" />
    </platform>
</plugin>
